{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=mydatabase;UserName=myuser;Password=mypassword",
    "HangfireConnection": "Host=localhost;Port=5432;Database=mydatabase;UserName=myuser;Password=mypassword"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JWT": {
    "ValidIssuer": "http://localhost:5000",
    "ValidAudience": "http://localhost:3000",
    "Secret": "YourSuperSecretKeyThatIsAtLeast16CharactersLong",
    "JwtCookieName": "AuthToken",
    "RefreshCookieName": "RefreshToken",
    "ScientistCreateToken": "secret",
    "RegularTokenExpiresInMinutes": "15",
    "RefreshTokenExpiresInDays": "7"
  },
  "Videos": {
    "RootDirectory": "videos",
    "NginxUrl": "http://localhost:8080/videos"
  },
  "Reports": {
    "RootDirectory": "reports",
    "NginxUrl": "http://localhost:8080/reports"
  },
  "Cors": {
    "AllowedDevOrigin": "http://localhost:3000",
    "AllowedProductionOrigin": "https://some-production-url.com"
  },
  "SignalR": {
    "HubUrl": "/hub/app"
  },
  "Limits": {
    "MaxBodySizeMb": "500"
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/projektgrupowy",
    "Issuer": "http://localhost:8080/realms/projektgrupowy",
    "Audience": "projektgrupowy-client"
  }
}
