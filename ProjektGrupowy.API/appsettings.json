{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=mydatabase;UserName=myuser;Password=mypassword",
    "Hangfire": "Host=localhost;Database=hangfire;UserName=myuser;Password=mypassword"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
